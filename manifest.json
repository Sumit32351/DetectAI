{
    "manifest_version" : 3,
    "name" : "DetectAI",
    "version" : "1.0",
    "description" : "",
    "action" : {
        "default_popup" : "popup.html",
        "default_icon" : {
            "16" : "icons/icon16.png",
            "32" : "icons/icon32.png",
            "48" : "icons/icon48.png",
            "128" : "icons/icon128.png" 
        }
    },
    
    "permissions" : [
        "scripting", 
        "activeTab",
        "sidePanel", 
        "storage", 
        "contextMenus"
    ],

    "background" : {
        "service_worker" : "background.js"  
    },


    "icons" : {
        "16" : "icons/icon16.png",
        "32" : "icons/icon32.png",
        "48" : "icons/icon48.png",
        "128" : "icons/icon128.png" 
    },

    "content_scripts" : [
        {
            "matches" : ["*://stackoverflow.com/*"],
            "js" : ["content.js"]
        }
    ],
    "host_permissions" : [
        "*://stackoverflow.com/*"
    ]
}